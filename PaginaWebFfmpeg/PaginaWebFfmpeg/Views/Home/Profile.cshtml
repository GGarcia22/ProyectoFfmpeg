
@{
    ViewData["Title"] = "Profile";
}

<div class="d-flex justify-content-center">
    <div class="container">
        <div class="card-header">
            <p>-- Perfil --</p>
        </div>
        <div class="card-body">
            <div class="form-group">
                <p>Usuario: @ViewBag.usuario.username</p>
            </div>
            <div class="form-group">
                <a asp-action="Logout" asp-controller="Home">Cerrar sesión</a>
            </div>
        </div>
    </div>
</div>